<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="158dp"
                android:text="@string/otp_verification"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/enter_the_6_digit_numbers_sent_to_your_email" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextNumber1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/editTextNumber2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/editTextNumber3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/editTextNumber4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/editTextNumber5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/editTextNumber6"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:background="@drawable/input_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="336dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:text="@string/if_you_didn_t_receive_code_resend_after"
                    android:textColor="@color/ggr"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints=""
                    android:ems="10"
                    android:inputType=""
                    android:textColor="#000000"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:backgroundTint="@color/ggr"
                    android:text="@string/set_new_password"
                    android:textAllCaps="false"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>